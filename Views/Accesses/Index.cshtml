@model IEnumerable<StoresManagement.ViewModels.AccessFormViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            @if (item.Role == null || item.Role.Name != "Manager")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Entity.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.PhoneNumber)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.User.Id">Edit</a>
                    </td>
                </tr>
            }
            else
            {

                <tr>
                    <td>
                    </td>
                    <td>
                        <b>
                            @Html.DisplayFor(modelItem => item.User.UserName)
                        </b>
                    </td>
                    <td>
                        <b>
                            @Html.DisplayFor(modelItem => item.Role.Name)
                        </b>
                    </td>
                    <td>
                        <b>
                            @Html.DisplayFor(modelItem => item.User.Email)
                        </b>
                    </td>
                    <td>
                    </td>
                    <td>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>