                <label asp-for="Contact.AddressNumber" class="control-label"></label>
                <input asp-for="Contact.AddressNumber" class="form-control" />
                <span asp-validation-for="Contact.AddressNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.AddressComplement" class="control-label"></label>
                <input asp-for="Contact.AddressComplement" class="form-control" />
                <span asp-validation-for="Contact.AddressComplement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

